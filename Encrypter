import os
import pyaes

# Caminho do arquivo criptografado
file_name = r"X:/Sla/teste.ransomwaretroll.txt"

# Abrir o arquivo criptografado
with open(file_name, "rb") as file:
    file_data = file.read()

# Chave para descriptografia
key = b"testeransomwares"
aes = pyaes.AESModeOfOperationCTR(key)
decrypt_data = aes.decrypt(file_data)

# Caminho do arquivo de sa√≠da (descriptografado)
new_file = "X:\\Sla\\teste.txt"
    
# Criar o arquivo descriptografado
with open(new_file, "wb") as new_file_obj:
    new_file_obj.write(decrypt_data)

# Remover o arquivo criptografado
os.remove(file_name)
